{{left_sidebar_enabled=True}}
{{extend 'layout.html'}}
<div class="container-fluid">
    <div class="row">
      <h1>Admin Page</h1>  
    </div>

<div class="row">
    
{{=grid}}

</div>
{{if request.vars.db_name=="access_keys":}}
<div class="row"><hr>
    <div class="panel panel-info">
        <div class="panel panel-heading">
            Information
        </div>
        <div class="panel panel-body">
            <ul>
                <li>To add a new Access Key click Add Record above.</li>
                <li>To edit the details for an existing Access Key click Edit</li>
                <li>To apply an access key to a user click {{=A('here',_href=URL("admin_page",vars={'db_name':"users"}))}}.</li>
            </ul>
                
        </div>
    </div>
    </div>
{{pass}}
{{if request.vars.db_name=="users":}}
<div class="row"><hr>
    <div class="panel panel-info">
        <div class="panel panel-heading">
            Information
        </div>
        <div class="panel panel-body">
            <ul>
                <li>To add a new hospital click Add Record above.</li>
                <li>To edit the details for an existing hospital click Edit</li>
                <li>To update a user's access key, click Edit on that user's record and enter the new key into the Access Key field and click Submit.</li>
            </ul>
                
                
                
        </div>
    </div>
    </div>
{{pass}}
