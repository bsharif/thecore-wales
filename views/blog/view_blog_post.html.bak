{{from gluon.tools import prettydate}}

{{left_sidebar_enabled=True}}

{{extend 'layout.html'}}
<div class="container-fluid">
    <div class="row">
        <div id="blog_title">
            {{=H1(blog_post_record.title,_class="blog-title")}}
        </div>
        {{if advanced_options:}}
            <div id="advanced_options">
                {{=A('Edit Post',_href=URL('edit_blog_post',vars={'post_id':blog_post_record.id}),_class="btn btn-primary")}}
        </div>
        {{pass}}
        <div id="post_details">
            <h3>Posted by {{=EM(A(user_name,_href=URL('user_posts',vars={'user_id':blog_post_record.created_by})))}} - {{=SPAN(prettydate(blog_post_record.created_on,T))}}</h3>
            
        </div>

       <div id="blog_content">
                {{=MARKMIN(blog_post_record.blog_content)}}
            </div>
            <div id="blog_tags">
                <br><h4>Tags:</h4>
                {{for tag in blog_post_record.tags:}}
                    {{=A(tag,_href=URL('view_tag',args=tag),_class='label label-default')}}
                {{pass}}
            </div>
    </div>  <hr>
{{pass}}
</div>



{{block left_sidebar}}
{{include 'blog_sidebar.html'}}
{{pass}}
