{{left_sidebar_enabled=True}}
{{extend 'layout.html'}}
<h1>{{=specialty_record.specialty}}</h1>
<h3>
    Author: {{=specialty_record.author}} <br>{{=specialty_record.email}}
</h3>
 {{if advanced_options:}}
            <div id="advanced_options">
                {{=A('Edit Content',_href=URL('edit_post',vars={'post_id':specialty_record.id}),_class="btn btn-primary")}} <br><br>
    {{pass}}
{{form_labels = {'pursure_a_career':'What made you decide to pursue a career in this specialty?','rotation_useful':'What rotations did you do in your training and were any particularly helpful?','enjoy_most':'What do you most enjoy about the specialty?','challenging_aspects':'Are there any aspects of the specialty you find challenging/ frustrating?','typical_patients':'Are there typical patient groups and if so what are they like?','typical_day':'What does the typical day in the life of a  registrar for this specialty involve?','typical_hours':'What are the typical working hours?','part_time_training':'Is there any opportunity for part time training?','teaching_research':'Are there many opportunities for teaching/research/managerial positions within the specialty?','advice':'Do you have any advice for someone considering a career in this specialty?'} }}
    
{{question_list = ['pursure_a_career','rotation_useful','enjoy_most','challenging_aspects','typical_patients','typical_day','typical_hours','part_time_training','teaching_research','advice']}}
{{for question in question_list:}}
{{for field in specialty_record:}}
{{if question == field:}}
{{if specialty_record[field] != "":}}
<div id="{{=question}}" class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">{{=form_labels[question]}}</h3>
  </div>
  <div class="panel-body">
    {{=MARKMIN(specialty_record[field])}}
  </div>
</div>
{{pass}}
{{pass}}
{{pass}}
{{pass}}

{{block left_sidebar}}
{{include 'specialty_sidebar.html'}}
{{pass}}
