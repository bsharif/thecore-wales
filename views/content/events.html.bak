{{right_sidebar_enabled=True}}
{{left_sidebar_enabled=True}}
{{extend 'layout.html'}}

<h1>All Events</h1> <hr> 
{{for event in all_events:}}
    <div class="row">
        <div class="col-md-2">
            <time datetime="{{=event.event_date.strftime('%Y-%m-%d')}}" class="icon">
              <em>{{=event.event_date.strftime('%A')}}</em>
              <strong>{{=event.event_date.strftime('%B "%y')}}</strong>
              <span>{{=event.event_date.strftime('%d')}}</span>
            </time>    
        </div>
<div class="event col-md-10">
    {{=H3(event.title,_class="click event-title",_href="#")}}

    {{=H4("Location  - " + event.event_location)}}


    

    
    <div class="expand well content" style="display:none">

    {{=XML(event.description)}}
    {{=A("Full Details",_class="btn btn-warning", _href=URL('view_event',args=[event.id]))}}

    </div>
        </div></div>
<hr>


{{pass}}	
{{block right_sidebar}}
{{=LOAD('content','events_right_sidebar.load',ajax=True)}}
{{end}}

{{block left_sidebar}}
{{include 'content/events_left_sidebar.load'}}
{{end}}
    
<script>
    
    $(document).ready(function(){
  $(".click").click(function(){
    
    var target = $(this).parent().children(".expand");
    $(target).slideToggle();
  });
});
</script>
