{{left_sidebar_enabled=True}}

{{extend 'layout.html'}}
<div class="container-fluid">
<h1>Posts tagged with {{=tag_name}}</h1>
{{for post in blog_posts:}}
    <div class="row">
        
            <div id="blog_title">
                <h1>{{=A(post.title,_href='')}}</h1>
                
            </div>
        <div class="well">    
        <div id="blog_content">
                {{=MARKMIN(post.blog_content)}}
            </div>
            <div id="blog_tags">
                <br><h4>Tags:</h4>
                {{for tag in post.tags:}}
                    {{=A(tag,_href=URL('view_tag',args=tag),_class='label label-default')}}
                {{pass}}
            </div>
        </div>
    </div>  <hr>
{{pass}}
</div>



{{block left_sidebar}}
{{include 'blog_sidebar.html'}}
{{pass}}
