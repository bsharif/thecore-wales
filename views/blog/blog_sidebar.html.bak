<div id="about_blog">
        {{=H1(A('The Blog',_href=URL('index'),_class="blog-title"))}}
        <p class="lead">
            The blog contains posts with general information about Core Medical Training in Wales. 
        </p>
        <p>
            Maintained by <em>Holly Morgan</em> and <em>Melanie Nana</em>.
    </p>
</div>

<div id="most_recent_post">
    <h3>Most recent post:</h3>
    {{most_recent_post = session.most_recent_post}}
    {{=H3(most_recent_post.title,_class="blog-title")}}
</div>

<div id="navigation">
    
<h3>Tags:</h3>
{{for tag in session.blog_tags:}}
    {{=A(tag,_href=URL('view_tag',args=tag),_class="label label-default")}}
{{pass}}

<h3>Users:</h3>
{{for user in session.user_dict:}}
    {{=A(session.user_dict[user],_href=URL('user_posts',vars={'user_id':user}),_class="label label-default")}}
{{pass}}

</div>
